
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@*<link href="~/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />*@
<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.2.2/css/buttons.dataTables.min.css">
<link href='https://rawgit.com/Gary-Li/angular-scrollable-table/master/scrollable-table.css' rel="stylesheet" type="text/css">
<link rel="stylesheet" href="~/vendor/datatables/media/css/datatables.bootstrap4.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fancybox/3.5.7/jquery.fancybox.min.css" />


<style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
        display: none !important;
    }
</style>

<link href="~/css/select.css" rel="stylesheet" />
@*<link rel="stylesheet" href="https://netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.css">*@
<link rel="stylesheet" href="~/css/select2.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.8.5/css/selectize.default.css">

<style>
    .select2 > .select2-choice.ui-select-match {
        /* Because of the inclusion of Bootstrap */
        height: 29px;
    }

    .selectize-control > .selectize-dropdown {
        top: 36px;
    }
    /* Some additional styling to demonstrate that append-to-body helps achieve the proper z-index layering. */
    .select-box {
        background: #fff;
        position: relative;
        z-index: 1;
    }

    .alert-info.positioned {
        margin-top: 1em;
        position: relative;
        z-index: 10000; /* The select2 dropdown has a z-index of 9999 */
    }

    .ui-select-bootstrap > .ui-select-choices, .ui-select-bootstrap > .ui-select-no-choice {
        display: block;
    }

    .select2 > .select2-choice.ui-select-match {
        height: 40px;
    }

    .ui-select-container {
        width: 100% !important;
    }

    form#SearchForm .container > .row > div > div > div {
        width: 48%;
        margin: 0 0 2%;
    }

    form#SearchForm .container > .row > div > div > label {
        width: 100%;
        text-transform: uppercase;
        margin-bottom: 5px;
        min-height: 22px;
    }

    form#SearchForm .container > .row > div > div {
        margin-left: 10px;
    }
</style>


<section role="main" class="content-body" ng-init="Init('@ViewBag.FirmID', @ViewBag.View, @ViewBag.Add, @ViewBag.Update, @ViewBag.Delete)">
    <header class="page-header">
        <h2>CARİLER</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><span>Cariler</span> </li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
        </div>
    </header>

    @*@{ Html.RenderPartialIf("_MenuBar", Request.IsAuthenticated); }*@

    <!-- start: page -->
    @{ Html.RenderPartialIf("_CariListForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_CariViewForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_CariDetailForm", Request.IsAuthenticated); }

    @{ Html.RenderPartialIf("_CariContactPopupForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_CariAddressPopupForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_CariMeetingPopupForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_CariDeletePopupForm", Request.IsAuthenticated); }

    @{ Html.RenderPartialIf("_CariDocumentPopupForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_CariDocumentDeletePopupForm", Request.IsAuthenticated); }

    <!-- end: page -->
</section>

