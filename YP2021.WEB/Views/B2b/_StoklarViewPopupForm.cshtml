<!-- Modal Form -->
<div id="modalProductViewForm" class="modal-block modal-block-primary mfp-hide">
    <section class="card">
        <header class="card-header bg-primary">
            <div class="row">
                <div class="col-10 ">
                    <h2 class="card-title text-white" ng-bind="'Ürün: ' + FormModel.BUKOD + ' ' + FormModel.NAME"></h2>
                </div>
                <div class="col-2 text-right">
                    <button class="btn d-flex align-items-center pull-right kapat-btn" ng-click="ClosePopup()"><i class="fas fa-times"></i></button>
                </div>
            </div>
        </header>

        <!-- MProduct View -->
        <div class="card-body" @*ng-show="MUPopup=='MUformview'"*@>
           
            <div class="row">
                <div class="col-md-3 mb-20">
                    <div class="form-group row">
                        <label class="col-sm-12 col-form-label">BUKOD</label>
                        <div class="col-sm-12">
                            <input type="text" readonly class="form-control" ng-model="FormModel.BUKOD">
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-20">
                    <div class="form-group row">
                        <label class="col-sm-12 col-form-label">Ürün Adı</label>
                        <div class="col-sm-12">
                            <input type="text" readonly class="form-control" ng-model="FormModel.NAME">
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-20">
                    <div class="form-group row">
                        <label class="col-sm-12 col-form-label">Stok Adet</label>
                        <div class="col-sm-12">
                            <input type="number" readonly ng-model="FormModel.B2BStockAmount" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-20">
                    <div class="form-group row">
                        <label class="col-sm-12 col-form-label">Baz Fiyat</label>
                        <div class="col-6">
                            <span class="form-control" readonly ng-bind="FormModel.B2BBasePrice | number:2"></span>
                        </div>
                        <div class="col-6">
                            <input type="text" readonly class="form-control" ng-model="FormModel.B2BCurrencyCode">
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-20">
                    <div class="form-group row">
                        <label class="col-sm-12 col-form-label">İndirimli Fiyat</label>
                        <div class="col-6">
                            <span class="form-control" readonly ng-bind="FormModel.B2BDiscountedPrice | number:2"></span>
                        </div>
                        <div class="col-6">
                            <input type="text" readonly class="form-control" ng-model="FormModel.B2BCurrencyCode">
                        </div>
                    </div>
                </div>


                <div class="col-md-3 mb-20">
                    <div class="form-group row">
                        <label class="col-lg-12 control-label">Anasayfa'da görünsün</label>
                        <div class="col-lg-12">
                            <input type="checkbox" disabled readonly ng-true-value="true" ng-false-value="false" ng-model="FormModel.B2BIsVisibleOnHomepage" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-20">
                    <div class="form-group row">
                        <label class="col-lg-12 control-label">Kategori Anasayfasında görünsün</label>
                        <div class="col-lg-12">
                            <input type="checkbox" disabled readonly ng-true-value="true" ng-false-value="false" ng-model="FormModel.B2BIsVisibleOnCategoryHomepage" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-20">
                    <div class="form-group row">
                        <label class="col-lg-12 control-label">Yeni Ürün</label>
                        <div class="col-lg-12">
                            <input type="checkbox" disabled readonly ng-true-value="true" ng-false-value="false" ng-model="FormModel.B2BIsNewProduct" />
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-20">
                    <div class="form-group row">
                        <label class="col-lg-12 control-label">İndirimde</label>
                        <div class="col-lg-12">
                            <input type="checkbox" disabled readonly ng-true-value="true" ng-false-value="false" ng-model="FormModel.B2BIsOnSale" />
                        </div>
                    </div>
                </div>

