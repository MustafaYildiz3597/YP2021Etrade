@{
    var inputpattern = String.Empty;
    if (ViewBag.Device == "iphone")
    {
        inputpattern = "pattern=[0-9]*";
    }
    else if (ViewBag.Device == "web")
    {
        // web
    }
    else
    {
        inputpattern = "inputmode=numeric";
    }

    var role = "";
    if (User.IsInRole("Admin"))
    {
        role = "Admin";
    }
}

<div class="card" ng-show="ShowingDiv=='edit'" ng-cloak>
    <div class="card-body p0">
        <form class="form-horizontal" name="DetailForm" id="DetailForm" novalidate ng-submit="Save(DetailForm.$valid)">
            <header class="card-header alt-title">
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn geri-btn" type="button" ng-click="BackToList()"><i class="fas fa-reply text-white"></i></button>
                        <h2 ng-bind="'Ana Kategori ' + breadcrumbs"></h2>
                    </div>
                </div>
            </header>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Reyon</label>
                            <div class="col-sm-12">
                                <select class="form-control mb-3" name="SECNAME" ng-model="FormModel.SECID"
                                        ng-class="{'text-danger': (DetailForm.SECNAME.$dirty || DetailForm.$submitted) && DetailForm.SECNAME.$invalid }"
                                        ng-options="item.SECID as item.NAME for item in ProductSections | orderBy: 'NAME'" required>
                                    <option value="">---Seçiniz---</option>
                                </select>
                                <span style="width:100%;" ng-show="(DetailForm.SECNAME.$dirty || DetailForm.$submitted) && DetailForm.SECNAME.$invalid">
                                    <label class="text-danger" ng-show="DetailForm.SECNAME.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Ana Kategori</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" name="NAME" ng-model="FormModel.NAME" required>
                                <span style="width:100%;" ng-show="(DetailForm.NAME.$dirty || DetailForm.$submitted) && DetailForm.NAME.$invalid">
                                    <label class="text-danger" ng-show="DetailForm.NAME.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Ana Kategori EN</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" name="NAME_EN" ng-model="FormModel.NAME_EN" required>
                                <span style="width:100%;" ng-show="(DetailForm.NAME_EN.$dirty || DetailForm.$submitted) && DetailForm.NAME_EN.$invalid">
                                    <label class="text-danger" ng-show="DetailForm.NAME_EN.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Ana Kategori DE</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" name="NAME_DE" ng-model="FormModel.NAME_DE">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Ana Kategori FR</label>
                            <div class="col-sm-12">
                                <input type="text" class="form-control" name="NAME_FR" ng-model="FormModel.NAME_FR">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Sort</label>
                            <div class="col-sm-12">
                                <input type="number" class="form-control" name="SORT" ng-model="FormModel.SORT">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <!--Aktif-->
                        <div class="form-group row">
                            <label class="col-lg-12 control-label">Aktif/Pasif</label>
                            <div class="col-lg-12">
                                <div class="checkbox-default">
                                    <input type="checkbox" ng-model="FormModel.ENABLED">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="card-footer">
                <div class="d-flex justify-content-end">
                    <button class="btn pink-btn">Kaydet</button>
                </div>
            </footer>

        </form>
    </div>
</div>

