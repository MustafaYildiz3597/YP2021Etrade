@{
    var inputpattern = String.Empty;
    if (ViewBag.Device == "iphone")
    {
        inputpattern = "pattern=[0-9]*";
    }
    else if (ViewBag.Device == "web")
    {
        // web
    }
    else
    {
        inputpattern = "inputmode=numeric";
    }

    var role = "";
    if (User.IsInRole("Admin"))
    {
        role = "Admin";
    }
}

<div class="card" ng-show="ShowingDiv=='edit'" ng-cloak>
    <div class="card-body p0">
        <form class="form-horizontal" name="DetailForm" id="DetailForm" novalidate ng-submit="Save(DetailForm.$valid)">
            <header class="card-header alt-title">
                <div class="row">
                    <div class="col-md-12">
                        <button class="btn geri-btn" type="button" ng-click="BackToList()"><i class="fas fa-reply text-white"></i></button>
                        <h2 ng-bind="'Cari Vade ' + breadcrumbs"></h2>
                    </div>
                </div>
            </header>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Cari Vade</label>
                            
                            <div class="col-sm-12">
                                <input type="text" class="form-control" name="Name" ng-model="FormModel.Name" required>
                                <span style="width:100%;" ng-show="(DetailForm.Name.$dirty || DetailForm.$submitted) && DetailForm.Name.$invalid">
                                    <label class="text-danger" ng-show="DetailForm.Name.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <div class="form-group row">
                            <label class="col-sm-12 col-form-label">Sıra No</label>
                            <div class="col-sm-12">
                                <input type="number" class="form-control" name="RankNumber" ng-model="FormModel.RankNumber" required>
                                <span style="width:100%;" ng-show="(DetailForm.RankNumber.$dirty || DetailForm.$submitted) && DetailForm.RankNumber.$invalid">
                                    <label class="text-danger" ng-show="DetailForm.RankNumber.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-20">
                        <!--Aktif-->
                        <div class="form-group row">
                            <label class="col-lg-12 control-label">Aktif/Pasif</label>
                            <div class="col-lg-12">
                                <div class="checkbox-default">
                                    <input type="checkbox" ng-model="FormModel.IsActive">
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
                
            </div>
            <footer class="card-footer">
                <div class="d-flex justify-content-end">
                    <button class="btn pink-btn">Kaydet</button>
                </div>
            </footer>

        </form>
    </div>
</div>

