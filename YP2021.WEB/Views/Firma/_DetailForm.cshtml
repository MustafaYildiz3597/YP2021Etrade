@{
    var inputpattern = String.Empty;
    if (ViewBag.Device == "iphone")
    {
        inputpattern = "pattern=[0-9]*";
    }
    else if (ViewBag.Device == "web")
    {
        // web
    }
    else
    {
        inputpattern = "inputmode=numeric";
    }
}

<div class="row" ng-show="ShowingDiv=='detail'" ng-cloak>
    <div class="col">
        <section class="card">
            <header class="card-header">
                <div class="card-actions">
                    @*<a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                    <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>*@
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <h2 class="card-title">Firma Detay</h2>
                    </div>
                    <div class="col-md-6 text-right">
                        <button class="btn btn-default" type="button" ng-click="BackToList()"><i class="fas fa-reply"></i></button>
                    </div>
                </div>
            </header>
            <div class="card-body">
                <form class="form-horizontal" name="DetailForm" id="DetailForm" novalidate ng-submit="Save(DetailForm.$valid)">
                    <div class="card-body">
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="Title">Ünvan <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" ng-class="{'error': (DetailForm.Title.$dirty || DetailForm.$submitted) && DetailForm.Title.$invalid}" id="Title" name="Title" ng-model="FormModel.Title" autocomplete="off" maxlength="50" required>
                                <span style="width:100%;" ng-show="(DetailForm.Title.$dirty || DetailForm.$submitted) && DetailForm.Title.$invalid">
                                    <label class="error" ng-show="DetailForm.Title.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="Address">Adres</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="Address" name="Address" ng-model="FormModel.Address" autocomplete="off" maxlength="255" @*required*@>
                                <span style="width:100%;" ng-show="(DetailForm.Address.$dirty || DetailForm.$submitted) && DetailForm.Address.$invalid">
                                    <label class="error" ng-show="DetailForm.Address.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="City">Şehir</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="City" name="City" ng-model="FormModel.City" autocomplete="off" maxlength="32" @*required*@>
                                <span style="width:100%;" ng-show="(DetailForm.City.$dirty || DetailForm.$submitted) && DetailForm.City.$invalid">
                                    <label class="error" ng-show="DetailForm.City.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="ContactName">Yetkili Ad Soyad <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="ContactName" name="ContactName" ng-model="FormModel.ContactName" autocomplete="off" maxlength="64" required>
                                <span style="width:100%;" ng-show="(DetailForm.ContactName.$dirty || DetailForm.$submitted) && DetailForm.ContactName.$invalid">
                                    <label class="error" ng-show="DetailForm.ContactName.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="ContactGSMNo">Yetkili Telefon Numarası <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="ContactGSMNo" name="ContactGSMNo" @inputpattern ng-model="FormModel.ContactGSMNo" ng-pattern="/^[5-5]{1}[0-9]{2}-[0-9]{3}-[0-9]{4}$/" ui-mask="599-999-9999" model-view-value="true" ui-mask-placeholder autocomplete="off" maxlength="16" required>
                                <span style="width:100%;" ng-show="(DetailForm.ContactGSMNo.$dirty || DetailForm.$submitted) && DetailForm.ContactGSMNo.$invalid">
                                    <label class="error" ng-show="DetailForm.ContactGSMNo.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="ContactEmail">Yetkili E-Posta <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" ng-class="{'error': (DetailForm.ContactEmail.$dirty || DetailForm.$submitted) && DetailForm.ContactEmail.$invalid}" id="ContactEmail" name="ContactEmail" ng-model="FormModel.ContactEmail" ng-pattern="emailFormat" model-view-value="true" autocomplete="off" maxlength="64" required>
                                <span style="width:100%;" ng-show="(DetailForm.ContactEmail.$dirty || DetailForm.$submitted) && DetailForm.ContactEmail.$invalid">
                                    <label class="error" ng-show="DetailForm.ContactEmail.$error.required">Zorunlu Alan</label>
                                    <label class="error" ng-show="DetailForm.ContactEmail.$error.pattern">Geçersiz Email</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="KEPEmail">KEP E-Posta</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" ng-class="{'error': (DetailForm.KEPEmail.$dirty || DetailForm.$submitted) && DetailForm.KEPEmail.$invalid}" id="KEPEmail" name="KEPEmail" ng-model="FormModel.KEPEmail" ng-pattern="emailFormat" model-view-value="true" autocomplete="off" maxlength="64" @*required*@>
                                <span style="width:100%;" ng-show="(DetailForm.KEPEmail.$dirty || DetailForm.$submitted) && DetailForm.KEPEmail.$invalid">
                                    <label class="error" ng-show="DetailForm.KEPEmail.$error.required">Zorunlu Alan</label>
                                    <label class="error" ng-show="DetailForm.KEPEmail.$error.pattern">Geçersiz Email</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="PhoneNo">Telefon Numarası</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" ng-class="{'error': (DetailForm.PhoneNo.$dirty || DetailForm.$submitted) && DetailForm.PhoneNo.$invalid}" id="PhoneNo" name="PhoneNo" ng-model="FormModel.PhoneNo" ng-pattern="/^[2-5]{1}[0-9]{2}-[0-9]{3}-[0-9]{4}$/" ui-mask="999-999-9999" model-view-value="true" ui-mask-placeholder autocomplete="off" @*required*@>
                                <span style="width:100%;" ng-show="(DetailForm.PhoneNo.$dirty || DetailForm.$submitted) && DetailForm.PhoneNo.$invalid">
                                    <label class="error" ng-show="DetailForm.PhoneNo.$error.required">Zorunlu Alan</label>
                                    <label class="error" ng-show="DetailForm.PhoneNo.$error.pattern">Geçersiz Telefon Numarası (2-5 arası bir sayıyla başlamalı!)</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="TaxNumber">Vergi No</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="TaxNumber" name="TaxNumber" ng-model="FormModel.TaxNumber" autocomplete="off" maxlength="16" @*required*@>
                                <span style="width:100%;" ng-show="(DetailForm.TaxNumber.$dirty || DetailForm.$submitted) && DetailForm.TaxNumber.$invalid">
                                    <label class="error" ng-show="DetailForm.TaxNumber.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="TaxOffice">Vergi Dairesi</label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="TaxOffice" name="TaxOffice" ng-model="FormModel.TaxOffice" autocomplete="off" maxlength="32" @*required*@>
                                <span style="width:100%;" ng-show="(DetailForm.TaxOffice.$dirty || DetailForm.$submitted) && DetailForm.TaxOffice.$invalid">
                                    <label class="error" ng-show="DetailForm.TaxOffice.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="KEPMemberMaxLimit">KEP Üye Limit <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <input type="text" class="form-control" id="KEPMemberMaxLimit" name="KEPMemberMaxLimit" ng-model="FormModel.KEPMemberMaxLimit" autocomplete="off" maxlength="32" required>
                                <span style="width:100%;" ng-show="(DetailForm.KEPMemberMaxLimit.$dirty || DetailForm.$submitted) && DetailForm.KEPMemberMaxLimit.$invalid">
                                    <label class="error" ng-show="DetailForm.KEPMemberMaxLimit.$error.required">Zorunlu Alan</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="KEPExpirationDT">KEP Geçerlilik Tarihi <span class="required">*</span></label>
                            <div class="col-lg-6">
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text">
                                            <i class="fas fa-calendar-alt"></i>
                                        </span>
                                    </span>
                                    <input type="text" class="form-control" ng-class="{'error': (DetailForm.KEPExpirationDT.$dirty || DetailForm.$submitted) && DetailForm.KEPExpirationDT.$invalid}" id="KEPExpirationDT" name="KEPExpirationDT" ng-model="FormModel.KEPExpirationDT"
                                           ng-pattern="/^(0[1-9]|[1-2][0-9]|3[0-1])\.(0[1-9]|1[0-2])\.[0-9]{4}$/" autocomplete="off" jqdatepicker @*readonly="readonly" *@ required>

                                    @*<input type="text" data-plugin-datepicker data-plugin-options='{"dateFormat": "dd.mm.yyyy", "language":"tr", "autoclose":true}' id="KEPExpirationDT" name="KEPExpirationDT" ng-model="FormModel.KEPExpirationDT" autocomplete="off"
                                             ng-pattern="/^[0-9]{4}\-(0[1-9]|1[0-2])\-(0[1-9]|[1-2][0-9]|3[0-1])$/"
                                             class="form-control" ng-class="{'error': (DetailForm.KEPExpirationDT.$dirty || DetailForm.$submitted) && DetailForm.KEPExpirationDT.$invalid}" required>*@
                                </div>
                                <span style="width:100%;" ng-show="(DetailForm.KEPExpirationDT.$dirty || DetailForm.$submitted) && DetailForm.KEPExpirationDT.$invalid">
                                    <label class="error" ng-show="DetailForm.KEPExpirationDT.$error.required">Zorunlu Alan</label>
                                    <label class="error" ng-show="DetailForm.KEPExpirationDT.$error.pattern">Geçersiz Tarih</label>
                                </span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="KEPStatus">KEP Durumu</label>
                            <div class="col-lg-6">
                                <div class="checkbox-default">
                                    @*<input type="checkbox" checked="" id="checkboxExample1">*@
                                    <input type="checkbox" id="KEPStatus" name="KEPStatus" ng-model="FormModel.KEPStatus">

                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-1">Kayıt Yapan</label>
                            <div class="col-lg-6">
                                <p class="form-control-static" ng-bind="FormModel.CreateFullName"></p>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-1">Kayıt Tarihi</label>
                            <div class="col-lg-6">
                                <p class="form-control-static" ng-bind="FormModel.CreateDT | date:'dd/MM/yyyy'"></p>
                            </div>
                        </div>

                    </div>
                    <footer class="card-footer">
                        <div class="row justify-content-end">
                            <div class="col-sm-6">
                                @*<button class="btn btn-primary">Submit</button>*@
                                <input type="submit" class="btn btn-primary" value="Kaydet" />
                                @*<button type="reset" class="btn btn-default">Reset</button>*@
                            </div>
                        </div>
                    </footer>
                </form>
            </div>
        </section>
    </div>
</div>

