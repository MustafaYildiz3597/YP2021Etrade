<!-- Modal Form -->
<div id="modalImportPopup" class="modal-block modal-block-primary mfp-hide" style="max-width: 1200px;">
    <section class="card">
        <header class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-11">
                    <h2 class="card-title text-white" ng-bind="'Toplu Ürün Yükleme (Excel) ' + MUPopupTitle"></h2>
                </div>
            </div>
        </header>

        <div class="card-body">

            <form class="form-horizontal" name="UploadExcelForm" id="UploadExcelForm" novalidate ng-submit="UploadSelectedRows(UploadExcelForm.$valid)">
                <div class="form-group row">
                    <label class="col-lg-3 control-label text-lg-right pt-2" for="cmbProductSegment">Müşteri</label>
                    <div class="col-lg-6">
                        <select class="form-control" ng-class="{'error': (UploadExcelForm.cmbMusteri.$dirty || UploadExcelForm.$submitted) && UploadExcelForm.cmbMusteri.$invalid}" 
                                name="cmbMusteri" ng-model="UploadExcelFormModel.MusteriID"
                                ng-options="musteriitem.ID as musteriitem.FIRMA_ADI for musteriitem in Musteriler | orderBy: 'FIRMA_ADI'" required>
                            <option value="">--Seçiniz--</option>
                        </select>
                        <span style="width:100%;" ng-show="(UploadExcelForm.cmbMusteri.$dirty || UploadExcelForm.$submitted) && UploadExcelForm.cmbMusteri.$invalid">
                            <label class="error" ng-show="UploadExcelForm.cmbMusteri.$error.required">Zorunlu Alan</label>
                        </span>
                    </div>
                </div>

                <footer class="card-footer">
                    <div class="row justify-content-end">
                        <div class="col-sm-6">
                            @*<button class="btn btn-primary">Submit</button>*@
                            <input type="submit" class="btn btn-primary" value="Yükle" @*ng-click="UploadSelectedRows()"*@ />
                            @*<button type="reset" class="btn btn-default">Reset</button>*@
                        </div>
                    </div>
                </footer>

            </form>
        </div>
    </section>
</div>



