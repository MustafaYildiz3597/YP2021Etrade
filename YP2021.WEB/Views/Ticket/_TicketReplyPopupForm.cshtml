<!-- Modal Form -->
<div id="modalTicketReplyForm" class="modal-block modal-block-primary mfp-hide">
    <section class="card">
        <header class="card-header bg-primary">
            <div class="row">
                <div class="col-10 d-flex align-items-center">
                    <h2 class="card-title" ng-bind="'Cevap Yaz'"></h2>
                </div>
                <div class="col-2  d-flex align-items-center justify-content-end">
                    <button class="btn kapat-btn pull-right" ng-click="ClosePopup()"><i class="fas fa-times text-white"></i></button>
                </div>
            </div>
        </header>
        <!--ticket reply formu-->
        <div class="card-body">
            <form class="form-horizontal" name="TicketReplyForm" id="TicketReplyForm" novalidate ng-submit="SubmitTicketReplyForm(TicketReplyForm.$valid)">
                <div class="card-body">
                    <div class="row">

                        <div class="col-md-12 mb-20">
                            <div class="form-group row">
                                <label for="ProfileImage" class="col-sm-12 control-label">Dosya: </label>
                                <div class="col-sm-12" ng-show="MusteriDocumentFormData.ID != null" ng-bind="MusteriDocumentFormData.FileName"></div>
                                <div class="col-sm-12" ng-show="MusteriDocumentFormData.ID == null">
                                    <input id="attachmentX" name="attachmentX" type="file" class="file"
                                           @*onchange="angular.element(this).scope().readURLQImgX(this);"*@
                                           accept=".xlsx,.xls,image/*,.doc, .docx,.ppt, .pptx,.txt,.pdf"
                                           ng-model="MusteriDocumentFormData.MusteriDocumentData"
                                           @*valid-file
                                           ng-required="MusteriDocumentFormData.ID == null"*@ />
                                    <div class="d-flex">
                                        <input type="text" name="file-name" id="file-name" class="file-name col-8" readonly="readonly">
                                        <input type="button" class="dosya-btn" value="Yükle" ng-click="Upload()">
                                    </div>
                                    <label class="error" ng-show="MusteriDocumentForm.$submitted && MusteriDocumentForm.attachmentX.$error.required">Dosya seçmelisiniz!</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 mb-20">
                            <div class="form-group row">
                                <label class="col-lg-12 control-label" for="EDITOR_TABLE">Açıklama </label>
                                <div class="col-lg-12">
                                    <div class="form-content" ckeditor="data.options" ng-model="FormModel.EDITOR_TABLE"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <footer class="card-footer">
                    <div class="d-flex justify-content-end">
                        <input type="submit" class="btn pink-btn" value="Gönder" />
                    </div>
                </footer>
            </form>
        </div>

    </section>
</div>



