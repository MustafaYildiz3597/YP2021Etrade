@{
    ViewBag.Title = "NERO - Kullanıcı Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<link href="~/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />*@
<link href="~/css/jquery.dataTables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.2.2/css/buttons.dataTables.min.css">
@*<link rel="stylesheet" href="~/vendor/datatables/media/css/dataTables.bootstrap4.css" />*@


<style>
    [ng\:cloak], [ng-cloak], [data-ng-cloak], [x-ng-cloak], .ng-cloak, .x-ng-cloak {
        display: none !important;
    }

    .dataTable td {
        word-break: break-all;
    }
</style>


<section role="main" class="content-body" ng-init="Init('@ViewBag.FirmID',  @ViewBag.View, @ViewBag.Add, @ViewBag.Update, @ViewBag.Delete )">
    <header class="page-header">
        <h2>PERSONEL YÖNETİMİ</h2>

        <div class="right-wrapper text-right">
            <ol class="breadcrumbs">
                <li>
                    <a href="/">
                        <i class="fas fa-home"></i>
                    </a>
                </li>
                <li><span ng-bind="breadcrumb" ng-init="breadcrumb='Personel Listesi'"></span> </li>
            </ol>

            <a class="sidebar-right-toggle" data-open="sidebar-right"><i class="fas fa-chevron-left"></i></a>
        </div>
    </header>

    @*@{ Html.RenderPartialIf("_MenuBar", Request.IsAuthenticated); }*@

    <!-- start: page -->
    <div class="row" ng-show="ShowingDiv=='Liste'" ng-cloak>
        @*|| ShowingDiv=='detail'*@
        <div class="col">
            <section class="card card-primary">
                <header class="card-header">
                    <!-- <div class="card-actions">
                        <a href="#" class="card-action card-action-toggle" data-card-toggle></a>
                        <a href="#" class="card-action card-action-dismiss" data-card-dismiss></a>
                    </div> -->
                    <div class="row">
                        <div class="col-6"><h2 class="card-title"><i class="fal fa-list"></i> Personel Listesi</h2></div>
                        <div class="col-6 d-flex align-items-center justify-content-end" ng-show="Permission.Add == 1"><button id="addToTable" class="btn btn-success pull-right" ng-click="AddItem()">Personel Ekle <i class="fas fa-plus"></i></button></div>
                    </div>
                </header>
                <div class="card-body">
                    @*<div class="row">
                            <div class="col-sm-6">
                                <div class="mb-3">
                                    <button id="addToTable" class="btn btn-primary" ng-click="AddItem()">Ekle <i class="fas fa-plus"></i></button>
                                </div>
                            </div>
                        </div>*@
                    @*<div class="row">
                            <div class="col-sm-12">
                                <button id="addToTable" class="btn btn-primary pull-right" ng-click="AddItem()"><i class="fas fa-plus"></i></button>
                            </div>
                        </div>*@
                    <div class="overflow-x">
                        <table id="entry-grid" datatable="" dt-options="dtOptions" dt-columns="dtColumns" dt-instance="dtInstance" class="table table-bordered table-striped mb-0" @*class="table table-hover nowrap"*@></table>
                    </div>
                </div>
            </section>
        </div>
    </div>

    @{ Html.RenderPartialIf("_KullaniciDetailForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_KullaniciViewForm", Request.IsAuthenticated); }
    @{ Html.RenderPartialIf("_KullaniciDeletePopupForm", Request.IsAuthenticated); }
    <!-- end: page -->
</section>

@section Scripts {
    <script src="~/js/angularjs/personel.js?@DateTime.Now.Ticks"></script>
    <script src="~/js/examples/examples.datatables.default.js"></script>
    <script src="~/js/mask.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/fileuploader.js"></script>

    @*<script src="~/vendor/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>*@
    @*<script src="~/js/bootstrap-datepicker.tr.js"></script>*@

}
